{
  "name": "gympay",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun run server:dev\" \"bun run client:dev\"",
    "server:dev": "cd server && bun run dev",
    "client:dev": "cd client && bun run dev",
    "build": "cd client && bun run build",
    "start": "cd server && bun run start"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "concurrently": "^9.2.1"
  }
}
